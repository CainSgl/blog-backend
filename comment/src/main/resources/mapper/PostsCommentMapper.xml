<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cainsgl.comment.repository.PostsCommentMapper">

    <resultMap id="BaseResultMap" type="com.cainsgl.comment.entity.PostsCommentEntity">
        <id column="id" property="id" />
        <result column="content" property="content" />
        <result column="post_id" property="postId" />
        <result column="version" property="version" />
        <result column="user_id" property="userId" />
        <result column="created_at" property="createdAt" />
        <result column="like_count" property="likeCount" />
    </resultMap>

    <sql id="Base_Column_List">
        id,content,post_id,version,user_id,created_at,like_count,reply_count
    </sql>

    <select id="selectByCursor" parameterType="map" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM posts_comment
        WHERE post_id = #{postId}
        <if test="lastCreatedAt != null and lastLikeCount != null">
            AND (
            like_count &lt; #{lastLikeCount}
            OR
            (like_count = #{lastLikeCount} AND created_at  &lt; #{lastCreatedAt})
            )
            OR
            (like_count = #{lastLikeCount} AND created_at  = #{lastCreatedAt} AND id &lt; #{lastId})
            )
        </if>
        ORDER BY like_count DESC, created_at DESC,id DESC
        LIMIT 10
    </select>

</mapper>